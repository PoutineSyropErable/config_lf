cmd create_shortcut ${{
	printf "link name: "
	read ans
	ln -s "$f" "$ans"
}}


cmd create_relative_shortcut ${{
	printf "Link name: "
	read ans
	ln -s "$(realpath --relative-to="$PWD" "$f")" "$PWD/$ans"
}}



cmd setwallpaper ${{
	feh  --bg-center --bg-fill --no-fehbg "$f"
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.rar) unrar x "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.xz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *.7z) 7z e "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}


cmd open_no_ext &{{
    # Determine the MIME type of the file
	files=$(printf "$fx" | tr '\n' ';')
		while [ "$files" ]; do
			file=${files%%;*}
		mime_type=$(file --mime-type -Lb "$f")

		# Check if the file is a text file
		# notify-send "It's in mime_type: ($f) in ($mime_type)"
		case "$mime_type" in
			text/* | inode/x-empty | application/json)
				# Send the file to nvim using lf-remote if it is a text file
				# notify-send -t 2000 "lf remote opening with nvim"
				lf -remote "send $id \$nvim \"\$fx\""
				;;
			*)
				# Use xdg-open for non-text files
				# notify-send "xdg opening"
				xdg-open "$f"
				;;
		esac
	done
}}



cmd open &{{
	nvim_exts=("lua" "c" "asm" "py" "cpp" "h" "sh" "rs")  # add more if needed

	files=$(printf "$fx" | tr '\n' ';')
	while [ "$files" ]; do
		file=${files%%;*}
		printf "1: ext = $ext\n"
		ext="${file##*.}"
		printf "1: ext = $ext\n"
		ext="${ext,,}"  # lowercase
		printf "2: ext = $ext\n"

		# First pass: check by extension
		for e in "${nvim_exts[@]}"; do
			if [ "$ext" = "$e" ]; then
				lf -remote "send $id \$nvim \"\$file\""
				return
			fi
		done

		# Second pass: check by MIME type
		mime_type=$(file --mime-type -Lb "$file")
		if [[ "$mime_type" == text/* ]] || [ "$mime_type" = "inode/x-empty" ] || [ "$mime_type" = "application/json" ]; then
			lf -remote "send $id \$nvim \"\$file\""
			return
		fi

		# Fallback for everything else
		xdg-open "$f"
	done
}}

cmd open3 &{{
	case $(file --mime-type -Lb $f) in
		text/*) lf -remote "send $id \$nvim \$fx";;
		*) xdg-open "$f"
	esac
}}


cmd search_for %{{
    lf -remote "send $id push /$1<enter>"
}}

